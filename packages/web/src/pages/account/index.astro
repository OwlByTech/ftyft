---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Create Acount">
  <header class="flex items-center px-3 py-5">
    <img class="w-28" src="/logo.svg" />
  </header>

  <section class="flex flex-col justify-center items-center p-5">
    <div>
      <h1>Create an account</h1>
    </div>

    <div class="">
      {
        (
          <form method="post" action="api/account">
            <div class="flex flex-col items-center justify-center">
              <p>Email</p>
              <input
                name="email"
                class="shadow-md p-2 rounded"
                type="text"
                placeholder="Enter email"
              />

              <button class="w-full bg-primary-500  p-2 rounded-lg text-primary-50 text-center font-bold text-sm shadow-md transition-colors duration-100 hover:bg-dark-800">
                Log in
              </button>
            </div>
          </form>
        )
      }
    </div>
  </section>
</BaseLayout>

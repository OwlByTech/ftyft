---
import BaseLayout from "../../layouts/BaseLayout.astro";
const res = await fetch("http://localhost:4321/api/version");
---

<BaseLayout title="Login">
  <header class="flex items-center justify-start w-auto h-85 p-20">
    <img class="h-30 w-85" src="/logo.svg" />
  </header>

  <section
    class="flex flex-col items-center justify-center gap-y-20 px-20 pt-20 pb-30"
  >
    <div>
      <img src="/wish-login.svg" />
    </div>

    <div class="flex items-baseline flex-col justify-start font-extralight">
      <h1 class="text-4xl">Welcome Back</h1>
      <p class="text-xl">Gift what they want</p>
    </div>

    <div class="flex flex-col gap-y-10">
      {/*form login*/}
      {
        res.status === 200 ? (
          <div class="flex flex-col">
            <form method="post" action="api/login">
              <div class="flex flex-col">
                <div class="flex flex-col gap-2.5">
                  <p>Username</p>
                  <input
                    name="email"
                    class="shadow-md p-2 rounded"
                    type="text"
                    placeholder="Enter email"
                  />
                  <p>Password</p>
                  <input
                    name="password"
                    class="shadow-md p-2 rounded"
                    type="password"
                    placeholder="Enter password"
                  />
                  <button class="w-full bg-primary-500  p-2 rounded-lg text-primary-50 text-center font-bold text-sm shadow-md transition-colors duration-100 hover:bg-dark-800">
                    Log in
                  </button>
                </div>

                <div class="grid justify-items-center">
                  <p>or</p>
                </div>

                <div>
                  <button class="flex items-center justify-center gap-2 w-full bg-primary-50 p-2 rounded-lg text-dark-800 text-center font-bold text-sm shadow-md">
                    <img class="w-8 h-5" src="/google.svg" />
                    Continue with Google
                  </button>
                </div>

                <div class="gap-y-20 text-sm">
                  <p>
                    By continuing with Google, Apple, or Email, you agree to
                    Todoist’s Terms of Service and Privacy Policy.
                  </p>
                  <p>
                    Don’t have an account?{" "}
                    <a class="text-primary-500 font-bold" href="">
                      Sign Up
                    </a>
                  </p>
                </div>
              </div>
            </form>
          </div>
        ) : (
          <span>API Fetch failed</span>
        )
      }
    </div>
  </section>
</BaseLayout>

---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="sign up">
  <section class="flex flex-col justify-center items-center">
    <div>
      <h1>Create an Account</h1>
    </div>

    <div>
      {
        (
          <div>
            <form method="post" action="api/sign-up">
              <div class="flex flex-col justify-center gap-5">
                <p>Email</p>
                <input
                  name="email"
                  class="shadow-md p-2 rounded"
                  type="text"
                  placeholder="Enter email"
                />
                <p>Password</p>
                <input
                  name="password"
                  class="shadow-md p-2 rounded"
                  type="password"
                  placeholder="Enter password"
                />
                <p>Retry password</p>
                <input
                  name="retrypassword"
                  class="shadow-md p-2 rounded"
                  type="password"
                  placeholder="Retry password"
                />
                <p>User Name</p>
                <input
                  name="username"
                  class="shadow-md p-2 rounded"
                  type="text"
                  placeholder="Enter User Name"
                />
                <div>
                  <input
                    type="checkbox"
                    name="received-emails"
                  />
                  Received emails
                </div>

                <button class="w-full bg-primary-500  p-2 rounded-lg text-primary-50 text-center font-bold text-sm shadow-md transition-colors duration-100 hover:bg-dark-800">
                  Create an account
                </button>
              </div>

              <div class="gap-y-20 text-sm">
                <p>
                  By continuing with Google, Apple, or Email, you agree to
                  Todoistâ€™s Terms of Service and Privacy Policy.
                </p>
                <p>
                  Already have an account?{" "}
                  <a class="text-primary-500 font-bold" href="/login">
                    Log In
                  </a>
                </p>
              </div>
            </form>
          </div>
        )
      }
    </div>
  </section>
</BaseLayout>
